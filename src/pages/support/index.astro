---
import DocsLayout from '../../layouts/DocsLayout.astro';
import { docsNav } from '../../config/docs-nav';

const quickLinks = [
  {
    title: "Começando",
    description: "Novo no Zimplou? Comece por aqui para configurar tudo.",
    href: "/support/comecando",
    icon: "rocket"
  },
  {
    title: "Conectar Integrações",
    description: "WhatsApp, Google Agenda e Stripe em poucos passos.",
    href: "/support/integracoes",
    icon: "link"
  },
  {
    title: "Usando o Dashboard",
    description: "Navegue pelo app e gerencie seus agendamentos.",
    href: "/support/dashboard",
    icon: "layout"
  },
  {
    title: "Solução de Problemas",
    description: "Algo não está funcionando? Encontre ajuda aqui.",
    href: "/support/problemas",
    icon: "help"
  },
];
---

<DocsLayout title="Central de Ajuda" description="Encontre respostas e aprenda a usar o Zimplou">
  <div class="not-prose">
    <!-- Quick links grid -->
    <div class="grid gap-4 sm:grid-cols-2 mb-12">
      {quickLinks.map(link => (
        <a
          href={link.href}
          class="group block rounded-xl border border-slate-200 bg-white p-6 shadow-sm transition hover:border-emerald-200 hover:shadow-md"
        >
          <div class="flex items-start gap-4">
            <div class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg bg-emerald-50 text-emerald-600 group-hover:bg-emerald-100 transition">
              {link.icon === "rocket" && (
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z" />
                </svg>
              )}
              {link.icon === "link" && (
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
                </svg>
              )}
              {link.icon === "layout" && (
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
                </svg>
              )}
              {link.icon === "help" && (
                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
                </svg>
              )}
            </div>
            <div>
              <h3 class="font-semibold text-slate-900 group-hover:text-emerald-600 transition">{link.title}</h3>
              <p class="mt-1 text-sm text-slate-600">{link.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>

    <!-- All sections -->
    <h2 class="text-xl font-semibold text-slate-900 mb-6">Todos os tópicos</h2>
    <div class="space-y-8">
      {docsNav.map(section => (
        <div>
          <h3 class="font-medium text-slate-900 mb-3">{section.title}</h3>
          <ul class="grid gap-2 sm:grid-cols-2">
            {section.items.map(item => (
              <li>
                <a
                  href={item.href}
                  class="text-sm text-slate-600 hover:text-emerald-600 transition"
                >
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</DocsLayout>
