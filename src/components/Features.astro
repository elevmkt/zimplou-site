---

<section id="features" class="py-20 sm:py-32 section-glass">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        Tudo que você precisa para
        <span class="gradient-text">automatizar</span>
      </h2>
      <p class="mt-4 text-lg text-slate-400">
        Funcionalidades pensadas para simplificar seu dia a dia
      </p>
    </div>

    <!-- Features grid -->
    <div class="mt-16 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {features.map((feature) => (
        <div class="glass-card p-8">
          <div class="icon-glow mb-4 text-emerald-400" set:html={feature.icon} />
          <h3 class="text-xl font-semibold text-white">{feature.title}</h3>
          <p class="mt-2 text-slate-400">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
