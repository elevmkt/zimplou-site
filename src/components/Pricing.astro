---
const plans = [
  {
    name: 'Starter',
    price: 'R$ 97',
    period: '/mês',
    description: 'Perfeito para profissionais autônomos',
    features: [
      '1 profissional',
      '100 agendamentos/mês',
      'WhatsApp + IA',
      'Google Calendar',
      'Lembretes automáticos',
    ],
    cta: 'Começar teste grátis',
    popular: false,
  },
  {
    name: 'Pro',
    price: 'R$ 197',
    period: '/mês',
    description: 'Para negócios em crescimento',
    features: [
      'Até 5 profissionais',
      'Agendamentos ilimitados',
      'WhatsApp + IA avançada',
      'Google Calendar',
      'Lembretes + confirmações',
      'Relatórios completos',
    ],
    cta: 'Começar teste grátis',
    popular: true,
  },
  {
    name: 'Business',
    price: 'R$ 397',
    period: '/mês',
    description: 'Para equipes maiores',
    features: [
      'Profissionais ilimitados',
      'Agendamentos ilimitados',
      'IA personalizada',
      'Múltiplas unidades',
      'API de integração',
      'Suporte prioritário',
    ],
    cta: 'Falar com vendas',
    popular: false,
  },
];
---

<section id="pricing" class="py-20 sm:py-32 bg-slate-50">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
        Planos simples e transparentes
      </h2>
      <p class="mt-4 text-lg text-slate-600">
        14 dias grátis para testar. Cancele quando quiser.
      </p>
    </div>

    <!-- Pricing cards -->
    <div class="mt-16 grid gap-8 lg:grid-cols-3">
      {plans.map((plan) => (
        <div class={`relative rounded-2xl bg-white p-8 shadow-sm ${plan.popular ? 'ring-2 ring-emerald-500 shadow-lg' : ''}`}>
          {plan.popular && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 rounded-full bg-gradient-to-r from-emerald-500 to-teal-500 px-4 py-1 text-sm font-semibold text-white">
              Mais popular
            </div>
          )}
          
          <h3 class="text-xl font-semibold text-slate-900">{plan.name}</h3>
          <p class="mt-2 text-slate-600">{plan.description}</p>
          
          <div class="mt-6 flex items-baseline">
            <span class="text-4xl font-bold text-slate-900">{plan.price}</span>
            <span class="ml-1 text-slate-500">{plan.period}</span>
          </div>
          
          <ul class="mt-8 space-y-3">
            {plan.features.map((feature) => (
              <li class="flex items-center gap-3">
                <svg class="h-5 w-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-slate-600">{feature}</span>
              </li>
            ))}
          </ul>
          
          <a 
            href="https://app.zimplou.com" 
            class={`mt-8 block w-full rounded-full py-3 text-center font-semibold transition ${
              plan.popular 
                ? 'bg-gradient-to-r from-emerald-500 to-teal-500 text-white shadow-lg shadow-emerald-500/25 hover:shadow-emerald-500/40' 
                : 'bg-slate-100 text-slate-900 hover:bg-slate-200'
            }`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
