---
const plans = [
  {
    name: 'Essencial',
    price: 'R$ 19,90',
    period: '/mês',
    yearlyPrice: 'R$ 149,90/ano',
    yearlySavings: '2 meses grátis',
    description: 'Atende WhatsApp e cobra automaticamente',
    highlight: 'Ideal pra começar',
    features: [
      'IA respondendo no WhatsApp 24/7',
      'Conversa natural, não menu robótico',
      'Responde perguntas automaticamente',
      'Cobra via Stripe direto na conversa',
      'Painel pra acompanhar tudo',
    ],
    notIncluded: [
      'Agendamento automático',
      'Sincronização com calendário',
      'Lembretes automáticos',
    ],
    cta: 'Testar 10 dias grátis',
    popular: false,
  },
  {
    name: 'Completo',
    price: 'R$ 49,90',
    period: '/mês',
    yearlyPrice: 'R$ 389,90/ano',
    yearlySavings: '2 meses grátis',
    description: 'Atende, agenda e gerencia tudo sozinho',
    highlight: 'Automação total',
    features: [
      'Tudo do Essencial, mais:',
      'Agenda automática pelo WhatsApp',
      'Link mágico - cliente faz tudo sozinho',
      'Sincroniza com Google Calendar',
      'Lembretes e confirmações automáticas',
      'Assinaturas e pacotes de créditos',
      'Suporte prioritário',
    ],
    notIncluded: [],
    cta: 'Testar 10 dias grátis',
    popular: true,
  },
];
---

<section id="pricing" class="py-20 sm:py-32 section-glass">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <!-- Section header - Benefit focused -->
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
        Simples e direto.
        <span class="gradient-text">Escolhe o seu.</span>
      </h2>
      <p class="mt-4 text-lg text-slate-400">
        Dois planos, sem surpresas. Testa 10 dias grátis e depois escolhe.
      </p>
    </div>

    <!-- Pricing cards -->
    <div class="mt-16 grid gap-8 lg:grid-cols-2 max-w-4xl mx-auto">
      {plans.map((plan) => (
        <div class={`glass-card p-8 ${plan.popular ? 'pricing-popular' : ''}`}>
          {plan.popular && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2 rounded-full bg-gradient-to-r from-emerald-500 to-teal-500 px-4 py-1 text-sm font-semibold text-white">
              Mais popular
            </div>
          )}

          <h3 class="text-2xl font-bold text-white">{plan.name}</h3>
          <p class="mt-2 text-slate-400">{plan.description}</p>

          <div class="mt-6 flex items-baseline">
            <span class="text-5xl font-bold text-white">{plan.price}</span>
            <span class="ml-1 text-slate-400">{plan.period}</span>
          </div>

          <div class="mt-2 flex items-center gap-2">
            <span class="text-sm text-slate-400">{plan.yearlyPrice}</span>
            <span class="rounded-full bg-emerald-500/20 px-2 py-0.5 text-xs font-medium text-emerald-400">
              {plan.yearlySavings}
            </span>
          </div>

          <!-- Highlight - benefit tag -->
          <p class="mt-3 text-xs text-emerald-400 font-medium">{plan.highlight}</p>

          <ul class="mt-8 space-y-3">
            {plan.features.map((feature) => (
              <li class="flex items-center gap-3">
                <svg class="h-5 w-5 text-emerald-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-slate-300">{feature}</span>
              </li>
            ))}
            {plan.notIncluded.map((feature) => (
              <li class="flex items-center gap-3 opacity-50">
                <svg class="h-5 w-5 text-slate-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
                <span class="text-slate-500">{feature}</span>
              </li>
            ))}
          </ul>

          <a
            href="https://app.zimplou.com"
            class={`mt-8 block w-full rounded-full py-3 text-center font-semibold transition ${
              plan.popular
                ? 'btn-glass btn-glass-primary'
                : 'btn-glass btn-glass-secondary'
            }`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>

    <!-- No card required note -->
    <div class="mt-8 text-center">
      <p class="text-slate-500 text-sm">
        Funciona em 10 minutos. Sem cartão.
      </p>
    </div>

    <!-- Lifetime option -->
    <div class="mt-8 text-center">
      <p class="text-slate-400">
        Prefere pagar uma vez só?
        <span class="text-emerald-400 font-semibold">Licença vitalícia</span>
        a partir de R$ 224,85.
      </p>
    </div>
  </div>
</section>
