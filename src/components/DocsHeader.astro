---
const navItems = [
  { label: 'Início', href: '/' },
  { label: 'Suporte', href: '/support' },
  { label: 'Blog', href: '/blog' },
];
---

<header class="sticky top-0 z-30 border-b border-slate-200 bg-white/95 backdrop-blur supports-[backdrop-filter]:bg-white/80">
  <nav class="mx-auto flex h-16 max-w-8xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-3">
      <img src="/logo.svg" alt="Zimplou" class="h-9 w-9 rounded-lg" />
      <span class="text-xl font-bold text-slate-900">Zimplou</span>
      <span class="hidden sm:block text-sm font-medium text-slate-400 border-l border-slate-200 pl-3 ml-1">Suporte</span>
    </a>

    <!-- Desktop Nav -->
    <div class="hidden md:flex md:items-center md:gap-6">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="text-sm font-medium text-slate-600 transition hover:text-emerald-600"
        >
          {item.label}
        </a>
      ))}
    </div>

    <!-- CTA -->
    <div class="flex items-center gap-3">
      <a
        href="https://app.zimplou.com"
        class="hidden sm:inline-flex text-sm font-medium text-slate-600 transition hover:text-emerald-600"
      >
        Entrar
      </a>
      <a
        href="https://app.zimplou.com"
        class="inline-flex items-center justify-center rounded-full bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-700"
      >
        Teste grátis
      </a>
    </div>
  </nav>
</header>
