---
/**
 * CardGrid Component
 *
 * A responsive grid container for LinkCard components.
 *
 * Usage in MDX:
 * <CardGrid>
 *   <LinkCard href="/path" title="Title" description="Description" />
 *   <LinkCard href="/path" title="Title" description="Description" />
 * </CardGrid>
 */

interface Props {
  cols?: 1 | 2 | 3;
}

const { cols = 2 } = Astro.props;

const colsClass = {
  1: 'grid-cols-1',
  2: 'sm:grid-cols-2',
  3: 'sm:grid-cols-2 lg:grid-cols-3',
}[cols];
---

<div class:list={['card-grid not-prose my-6 grid gap-4', colsClass]}>
  <slot />
</div>
