---
const navItems = [
  { label: 'Recursos', href: '#features' },
  { label: 'Como funciona', href: '#how-it-works' },
  { label: 'Preços', href: '#pricing' },
  { label: 'Blog', href: '/blog' },
];
---

<header class="fixed top-0 left-0 right-0 z-50 header-glass">
  <nav class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <img src="/logo.svg" alt="Zimplou" class="h-10 w-10 rounded-xl" />
        <span class="text-xl font-bold text-white">Zimplou</span>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex md:items-center md:gap-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="text-sm font-medium text-slate-300 transition hover:text-emerald-400"
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="flex items-center gap-3">
        <a
          href="https://app.zimplou.com"
          class="hidden sm:inline-flex text-sm font-medium text-slate-300 transition hover:text-emerald-400"
        >
          Entrar
        </a>
        <a
          href="https://app.zimplou.com"
          class="btn-glass btn-glass-primary !py-2 !px-5 !text-sm"
        >
          Teste grátis
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>
